<% layout("/layouts/boilerplate") %>
<div class="container mt-3">
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="pt-3 pb-3">Create a New Worko</h2>
            <form action="/worko/user" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="form-row d-flex">
                    <div class="form-group col-md-6">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="worko[name]" placeholder="Add a Catchy name"  class="form-control">
                        <div class="valid-feedback">Name looks good</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" name="worko[age]" placeholder="Enter age"  class="form-control">
                        <div class="valid-feedback">Age looks good</div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" required name="worko[email]" placeholder="Enter email" class="form-control">
                    <div class="valid-feedback">Email looks good</div>
                </div>
                <div class="form-row d-flex">
                    <div class="form-group col-md-6">
                        <label for="city" class="form-label">City</label>
                        <input type="text" name="worko[city]" placeholder="Enter city" class="form-control">
                        <div class="valid-feedback">City looks good</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="zipcode" class="form-label">Zipcode</label>
                        <input type="number" required name="worko[zipcode]" placeholder="Enter zipcode" class="form-control">
                        <div class="valid-feedback">Zipcode looks good</div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" required name="worko[image]" class="form-control">
                </div>
                <button type="submit" class="btn btn-dark mt-3 mb-3 ">Add</button>
            </form>
        </div>
    </div>
</div>

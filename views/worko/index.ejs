<% layout("/layouts/boilerplate") %>
<style>
    /* Adjustments for better styling */
    #filters {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .filter {
        text-align: center;
        margin: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        background-color: #f0f0f0;
        transition: all 0.3s ease;
    }

    .filter:hover {
        background-color: #e0e0e0;
        cursor: pointer;
    }

    .card {
        margin: 0.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center; /* Center content horizontally */
        text-align: center; /* Center content vertically */
    }

    .card:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .card-img-top {
        height: 10rem;
        width: 10rem;
        object-fit: cover;
        border-radius: 50%; /* To make it round */
    }

    .card-body {
        padding: 1rem;
        text-align: left; /* Align text to the left */
    }

    .card-text {
        font-size: 0.9rem;
    }

    .worko-link {
        color: inherit;
        text-decoration: none;
    }

    .wid {
        width: 20rem;
    }
</style>

<div class="mt-1">
    <% layout("/layouts/boilerplate") %>
    <div class="container mt-3">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let worko of allWorkos) { %>
                <a href="/worko/user/<%= worko._id %>" class="worko-link wid bord rounded">
                    <div class="card col worko-card p-2">
                        <div class="">
                            <img src="<%= worko.image.url %>" class="card-img-top" alt="worko-image">
                        </div>
                    
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= worko.name %></b><br>
                                <%= worko.city %>, <%= worko.zipcode %><br>
                            </p>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    </div>
</div>

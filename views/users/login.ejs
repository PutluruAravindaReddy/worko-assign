<% layout("/layouts/boilerplate")%>
<style>
  body {
    background-color: #f0f0f0; /* Light gray background */
  }
  .login-form {
    max-width: 400px;
    margin: auto;
    padding: 30px;
    border: 1px solid #ccc; /* Light border */
    border-radius: 8px;
    background-color: #fff; /* White background */
    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow */
  }
  .login-form h2 {
    margin-bottom: 20px;
    text-align: center;
    color: #333; /* Dark gray text */
  }
  .form-control {
    border-radius: 8px;
    padding: 10px;
    margin-bottom: 15px;
    box-shadow: none;
    border: 1px solid #ccc; /* Light border */
  }
  .btn-login {
    border-radius: 12px;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    background-color: #4CAF50; /* Green background */
    border: none;
    color: #fff; /* White text */
  }
  .btn-login:hover {
    background-color: #45a049; /* Darker green on hover */
  }
  .form-check-label {
    font-weight: normal;
    color: #555; /* Dark gray text for checkbox */
  }
  .text-register {
    text-align: center;
    color: #777; /* Light gray text for register link */
  }
  .text-register a {
    color: #4CAF50; /* Green register link */
  }
</style>

<div class="container my-5">
  <div class="login-form">
    <h2>Login</h2>
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" name="username" id="username" placeholder="Enter your username" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password" required>
      </div>
      <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="remember">
        <label class="form-check-label" for="remember">Remember me</label>
      </div>
      <button type="submit" class="btn btn-login btn-block">Login</button>
    </form>
    <hr>
    <p class="text-register">Don't have an account? <a href="/signup">Register here</a></p>
  </div>
</div>
